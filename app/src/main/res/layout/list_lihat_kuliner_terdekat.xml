<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_nilai"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="@dimen/margin_standard"
    android:orientation="horizontal"
    android:background="@drawable/border_rl_white_gray"
    android:elevation="@dimen/margin_small"
    android:padding="@dimen/margin_standard"
    >
    <RelativeLayout
        android:layout_width="@dimen/width120"
        android:layout_height="match_parent"
        android:id="@+id/rl_foto"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_kuliner"
            android:layout_width="@dimen/width120"
            android:layout_height="@dimen/width120"
            app:civ_border_color="@color/putih"
            android:layout_centerVertical="true"
            android:layout_above="@+id/text_nama"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_nama"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/hitamGray"
            android:textSize="@dimen/title_font"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            />
    </RelativeLayout>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_toRightOf="@+id/rl_foto"
        android:id="@+id/rb_favorit"
        android:layout_marginLeft="@dimen/margin_standard"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_centerHorizontal="true"
        android:max="5"
        android:stepSize="1.0"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_desc"
        android:layout_below="@+id/rb_favorit"
        android:layout_above="@+id/text_jarak"
        android:layout_toRightOf="@+id/rl_foto"
        android:textColor="@color/hitamGray"
        android:textSize="@dimen/text_font"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_small"
        android:maxLines="3"
        android:fontFamily="@font/roboto_regular"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hitamGray"
        android:textSize="@dimen/text_font"
        android:textAlignment="textEnd"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/rl_foto"
        android:layout_above="@+id/text_alamat"
        android:id="@+id/text_jarak"
        android:maxLines="1"
        android:layout_margin="@dimen/margin_small"
        android:gravity="end" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/putihGelap3"
        android:textSize="@dimen/text_font"
        android:id="@+id/text_alamat"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/roboto_regular"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/rl_foto"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginRight="@dimen/margin_small"
        />
</RelativeLayout>