<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exomatik.kuliner.Activity.ActMenuAdmin"
    android:background="@color/green1"
    >
    <RelativeLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="55.0dip"
        android:background="@color/putih">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25.0dip"
            android:layout_height="30.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/ic_back_gray" />

        <TextView
            android:id="@+id/text_title_anggota"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25.0dip"
            android:layout_toRightOf="@+id/back"
            android:gravity="center_vertical"
            android:text="Menu Admin"
            android:textColor="@color/hitamGray"
            android:textSize="17.0sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_small"
            android:src="@drawable/logo"
            android:id="@+id/btn_download"
            />
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:padding="@dimen/margin_standard"
        android:background="@drawable/border_rl_white"
        android:layout_below="@+id/customToolbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Kuliner"
                android:textSize="@dimen/title_font"
                android:textColor="@color/hitam"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_standard"
                android:id="@+id/text_title"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_title"
                android:id="@+id/rc_kuliner"
                android:layout_marginTop="@dimen/margin_standard"
                >
            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum ada data Kuliner"
                android:textColor="@color/hitam"
                android:textSize="@dimen/text_font"
                android:layout_marginTop="@dimen/margin_big"
                android:layout_below="@+id/text_title"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:id="@+id/text_nothing"
                android:visibility="gone"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height40"
                android:layout_centerHorizontal="true"
                android:text="Tambah Kuliner"
                android:textColor="@color/putih"
                android:textSize="@dimen/title_font"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:textAllCaps="false"
                android:id="@+id/btn_tambah"
                android:layout_below="@+id/rc_kuliner"
                android:background="@drawable/border_round_full_green"
                android:layout_marginTop="@dimen/margin_big"
                android:elevation="@dimen/margin_standard"
                />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
