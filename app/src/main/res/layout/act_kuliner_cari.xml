<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green1"
    tools:context="com.exomatik.kuliner.Activity.ActKulinerCari">

    <RelativeLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="55.0dip"
        android:background="@color/putih">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25.0dip"
            android:layout_height="30.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/ic_back_gray" />

        <TextView
            android:id="@+id/text_title_anggota"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25.0dip"
            android:layout_toRightOf="@+id/back"
            android:gravity="center_vertical"
            android:text="Cari Kuliner"
            android:textColor="@color/hitamGray"
            android:textSize="@dimen/title_font"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_download"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_small"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customToolbar"
        android:layout_margin="@dimen/margin_standard"
        android:background="@drawable/border_rl_white"
        android:padding="@dimen/margin_standard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_standard"
                android:text="Daftar Kuliner"
                android:textColor="@color/hitam"
                android:textSize="@dimen/title_font" />

            <RelativeLayout
                android:id="@+id/rl_et_cari"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/text_title"
                android:layout_marginTop="@dimen/margin_big">

                <EditText
                    android:id="@+id/et_cari"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_et_gray"
                    android:hint="Nama Kuliner"
                    android:imeOptions="actionSearch"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin_big"
                    android:paddingRight="@dimen/width40"
                    android:textColor="@color/hitamGray"
                    android:textColorHint="@color/hitamGray"
                    android:textSize="@dimen/text_font" />

                <ImageView
                    android:id="@+id/img_cari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_standard"
                    android:src="@drawable/ic_cari_black" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_kuliner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_et_cari"
                android:layout_marginTop="@dimen/margin_standard"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/text_nothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_et_cari"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_big"
                android:text="Belum ada data Kuliner"
                android:textAlignment="center"
                android:textColor="@color/hitam"
                android:textSize="@dimen/text_font"
                android:visibility="gone" />

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/shimmer_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_et_cari"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_standard"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_standard"
                android:background="@drawable/border_rl_gray_pinggir"
                android:elevation="8dp"
                android:visibility="gone"
                app:shimmer_animation_duration="1200">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img11"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:src="@color/background" />

                    <ImageView
                        android:id="@+id/img34"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/margin_standard"
                        android:layout_marginRight="@dimen/margin_standard"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:layout_toRightOf="@+id/img11"
                        android:src="@color/background" />

                    <ImageView
                        android:id="@+id/img35"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/img34"
                        android:layout_marginLeft="@dimen/margin_standard"
                        android:layout_marginRight="@dimen/margin_standard"
                        android:layout_marginTop="@dimen/margin_big"
                        android:layout_toRightOf="@+id/img11"
                        android:src="@color/background" />

                    <ImageView
                        android:id="@+id/img22"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/img11"
                        android:layout_marginRight="@dimen/margin_standard"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:src="@color/background" />
                </RelativeLayout>
            </io.supercharge.shimmerlayout.ShimmerLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
