<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_nilai"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="@dimen/margin_standard"
    android:orientation="horizontal"
    android:background="@drawable/border_rl_white"
    android:elevation="@dimen/margin_small"
    android:padding="@dimen/margin_standard"
    >

    <ImageView
        android:id="@+id/img_kuliner"
        android:layout_width="@dimen/width100"
        android:layout_height="@dimen/width100"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_nama"
        android:layout_toRightOf="@+id/img_kuliner"
        android:textColor="@color/hitamGray"
        android:textSize="@dimen/title_font"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginLeft="@dimen/margin_standard"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_desc"
        android:layout_below="@+id/text_nama"
        android:layout_toRightOf="@+id/img_kuliner"
        android:textColor="@color/hitamGray"
        android:textSize="@dimen/text_font"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_small"
        android:maxLines="3"
        android:lines="3"
        android:fontFamily="@font/roboto_regular"
        />

</RelativeLayout>